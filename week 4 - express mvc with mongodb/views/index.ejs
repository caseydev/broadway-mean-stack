<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
    <!--bower:css-->
    <!--endbower-->
    <!--bower:js-->
    <script src="/public/lib/angular/angular.js"></script>
    <script src="/public/lib/jquery/dist/jquery.js"></script>
    <script src="/public/lib/bootstrap/dist/js/bootstrap.js"></script>
    <!--endbower-->

  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>
    <form class="form-signin" action="/users/register" method="post">
      <h2 class="form-signin-heading text-center">Register</h2>

      <label for="username" class="sr-only">Username</label>
      <input type="text" id="username" name="username" class="form-control" placeholder="Username" required autofocus>

      <label for="fname" class="sr-only">First Name</label>
      <input type="text" id="fname" name="fname" class="form-control" placeholder="Name" required autofocus>

      <label for="lname" class="sr-only">Last Name</label>
      <input type="text" id="lname" name="lname" class="form-control" placeholder="Last Name" required autofocus>

      <label for="email" class="sr-only">E-mail</label>
      <input type="email" id="email" name="email" class="form-control" placeholder="E-mail" required>

      <label for="password" class="sr-only">Password</label>
      <input type="password" name="pwd" id="password" class="form-control" placeholder="Password" required>

      <label for="contact" class="sr-only">contact</label>
      <input type="password" name="contact" id="contact" class="form-control" placeholder="Password" required>

      <label for="contact" class="sr-only">contact</label>
      <input type="password" name="contact" id="contact" class="form-control" placeholder="Password" required>

      <label for="city" class="sr-only">city</label>
      <input type="text" name="city" id="city" class="form-control" placeholder="Password" required>

      <label for="state" class="sr-only">state</label>
      <input type="text" name="state" id="state" class="form-control" placeholder="state" required>

      <label for="country" class="sr-only">state</label>
      <input type="text" name="country" id="country" class="form-control" placeholder="state" required>

      <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
    </form>
    <form action="/user/auth" method="POST">
      <input type="text" placeholder="name" name="username">
      <input type="text" placeholder="quote" name="password">
      <button type="submit">Submit</button>
    </form>
  </body>
</html>
